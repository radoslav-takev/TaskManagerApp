<Window x:Class="TaskManagerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagerWpf"
        mc:Ignorable="d"
        Title="Task Manager" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input section -->
        <!-- Input section -->
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="TitleInput" Width="150" />
            <DatePicker x:Name="DueDateInput" Width="120"/>
            <ComboBox x:Name="PriorityInput" Width="100">
                <ComboBoxItem>Low</ComboBoxItem>
                <ComboBoxItem>Medium</ComboBoxItem>
                <ComboBoxItem>High</ComboBoxItem>
            </ComboBox>
            <Button Content="Add Task" Click="AddTask_Click"/>
        </StackPanel>

        <!-- Task list -->
        <ListBox x:Name="TaskList" Grid.Row="1" Margin="0,10,0,10" />

        <!-- Action buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center"  >
            <Button Content="Mark as Done" Click="MarkDone_Click"/>
            <Button Content="Delete Task" Click="DeleteTask_Click"/>
        </StackPanel>
    </Grid>
</Window>
